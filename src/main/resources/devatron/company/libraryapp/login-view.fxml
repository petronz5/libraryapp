<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="devatron.company.libraryapp.LoginController"
      stylesheets="@styles.css"
      spacing="15"
      alignment="CENTER"
      prefHeight="350.0"
      prefWidth="420.0"
      styleClass="login-container">

    <!-- Questo era: <Label text="Accesso alla Libreria" …/> -->
    <Label fx:id="lblTitle"
           text="Accesso alla Libreria"
           styleClass="login-title"/>

    <HBox spacing="10" alignment="CENTER">
        <!-- Aggiunto fx:id -->
        <Label fx:id="lblEmail"
               text="Email:"
               styleClass="login-label"/>
        <TextField fx:id="txtEmail"
                   promptText="email@devabook.com"
                   styleClass="login-field"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="lblPassword"
               text="Password:"
               styleClass="login-label"/>
        <StackPane>
            <PasswordField fx:id="txtPassword"
                           promptText="Password"
                           styleClass="login-field"/>
            <TextField fx:id="txtPasswordVisible"
                       promptText="Password"
                       styleClass="login-field"
                       visible="false"
                       managed="false"/>
        </StackPane>
        <Button fx:id="btnTogglePassword"
                text="👁"
                onAction="#togglePasswordVisibility"
                styleClass="toggle-button"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="btnLogin"
                text="Login"
                onAction="#handleLogin"/>
        <!-- Qui aggiungi fx:id in modo che btnExit venga iniettato -->
        <Button fx:id="btnExit"
                text="Esci"
                onAction="#handleExit"/>
    </HBox>

</VBox>
